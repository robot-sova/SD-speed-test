---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
import Navbar from "@components/navbar/navbar.astro";
import Reviews from "@components/reviews.astro";

const description = "Appliance emergency? Don't panic! Our skilled technicians provide same day repairs for all major brands. Quick & professional service. Call: (323) 870-4790";
const title ="Contact The Same Day Appliance Repair With Any Issue";
---
    <Layout title="Contact The Same Day Appliance Repair With Any Issue" description="Appliance emergency? Don't panic! Our skilled technicians provide same day repairs for all major brands. Quick & professional service. Call: (323) 870-4790">
  <Navbar />
<Reviews />
 
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">
          Contact Same Day Appliance Repair
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Need help? We are here to help!
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>435 E 30th St, Los Angeles, CA, 90011</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:hello@astroshipstarter.com"
              >info@samedayappliance.repair</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+14243250520">+1 (424) 325-0520</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
 
<Cta />
